<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:layout_gravity="center"
    >


    <TextView
        android:id="@+id/id_of_episode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Дата выхода"

        android:layout_gravity="center"
        android:padding="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"

        android:layout_weight="3"/>

    <TextView
        android:id="@+id/name_of_episode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:padding="5dp"

        android:layout_marginTop="5.5dp"
        android:text="Название эпизода"
        app:layout_constraintEnd_toStartOf="@+id/date_of_relise"

        app:layout_constraintStart_toEndOf="@+id/id_of_episode"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_weight="5"/>

    <TextView
        android:id="@+id/date_of_relise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"

        android:layout_gravity="center"
        android:padding="5dp"

        android:layout_marginEnd="1dp"
        android:layout_weight="1.5"

        android:text="Серия"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom" />
</LinearLayout>