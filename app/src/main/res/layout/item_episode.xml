<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:layout_gravity="center"
    android:background="@color/black"
    >


    <TextView
        android:id="@+id/id_of_episode"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:text="@string/date_of_realese"
        android:layout_gravity="center"
        android:padding="@dimen/header_of_column"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginStart="@dimen/start_indentation"
        android:layout_marginTop="@dimen/upper_indentation"

        android:layout_weight="3"

        android:typeface="monospace"
        android:textSize="@dimen/standart_size_os_text"
        android:textStyle="bold|italic"
        android:textColor="#00afc8"
        android:shadowDy="@dimen/shadow_dy"
        android:shadowRadius="@dimen/shadow_radius"
        android:shadowColor="#6fe555"
        android:letterSpacing="@dimen/letter_spacing"/>

    <TextView
        android:id="@+id/name_of_episode"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:padding="@dimen/pading_of_center_heder"

        android:layout_marginTop="@dimen/upper_indentation"
        android:text="@string/title"
        app:layout_constraintEnd_toStartOf="@+id/date_of_relise"

        app:layout_constraintStart_toEndOf="@+id/id_of_episode"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_weight="5"

        android:typeface="monospace"
        android:textSize="@dimen/standart_size_os_text"
        android:textStyle="bold|italic"
        android:textColor="@color/bluer"
        android:shadowDy="@dimen/shadow_dy"
        android:shadowRadius="10"
        android:shadowColor="@color/green"
        android:letterSpacing="@dimen/letter_spacing"/>

    <TextView
        android:id="@+id/date_of_relise"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/upper_indentation"

        android:layout_gravity="center"
        android:padding="@dimen/padding_of_end_content"

        android:layout_marginEnd="@dimen/margine_end_of_end_column"
        android:layout_weight="1.7"

        android:text="@string/episode"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        android:typeface="monospace"
        android:textSize="@dimen/standart_size_os_text"
        android:textStyle="bold|italic"
        android:textColor="@color/bluer"
        android:shadowDy="@dimen/shadow_dy"
        android:shadowRadius="@dimen/shadow_radius"
        android:shadowColor="@color/green"
        android:textAllCaps="true"

        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom" />
</LinearLayout>